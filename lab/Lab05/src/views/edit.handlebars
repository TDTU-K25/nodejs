<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-xl-5 col-lg-6 col-md-8 border mt-3 pt-3 rounded mx-3">
      <a href="/users" class="text-decoration-none text-primary">Quay lại</a>
      <h3 class="my-3 text-success">Cập nhật user</h3>
      {{#with user}}
      <form action="/users/{{id}}/edit?_method=PUT" method="post">
        <div class="mb-3">
          <label for="" class="form-label">Name</label>
          <input value="{{name}}" type="text" name="name" id="" placeholder="Nhập tên" class="form-control" />
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Email</label>
          <input value="{{email}}" type="text" name="email" id="" placeholder="Nhập email" class="form-control" />
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Gender</label>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" value="male" {{#ifEqual gender 'male' }} checked
              {{/ifEqual}}>
            <label class="form-check-label">
              Male
            </label>
          </div>
          <div class=" form-check">
            <input class="form-check-input" type="radio" name="gender" value="female" {{#ifEqual gender 'female' }}
              checked {{/ifEqual}}>
            <label class="form-check-label" for="">
              Female
            </label>
          </div>
        </div>
        <div class="mb-3">
          <label for="" class="form-label">Status</label>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="status" value="active" {{#ifEqual status 'active' }}
              checked {{/ifEqual}}>
            <label class="form-check-label">
              Active
            </label>
          </div>
          <div class=" form-check">
            <input class="form-check-input" type="radio" name="status" value="inactive" {{#ifEqual status 'inactive' }}
              checked {{/ifEqual}}>
            <label class="form-check-label" for="">
              Inactive
            </label>
          </div>
        </div>
        {{#if flash}}
        <div class="alert alert-{{flash.type}} alert-dismissible fade show" role="alert">
          {{flash.message}}
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
        <div>
          <button class="btn btn-success">Cập nhật user</button>
        </div>
      </form>
      {{/with}}
    </div>
  </div>
</div>